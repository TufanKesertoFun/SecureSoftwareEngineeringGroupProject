@page
@model CustomerBalanceModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@{
    ViewData["Title"] = "Customer Balances";
}
<h2 class="mb-3">Customer Balances</h2>

<table id="balancesTable" class="table table-striped table-bordered table-hover">
    <thead class="table-primary">
        <tr>
            <th>Id</th>
            <th>Customer Name</th>
            <th>Account Number</th>
            <th>Balance</th>
            <th>Currency</th>
            <th>Last Payment Date</th>
            <th>Credit Limit</th>
            <th>Status</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Postal Code</th>
            <th>Registration Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Balances)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CustomerName</td>
                <td>@item.AccountNumber</td>
                <td>@item.Balance.ToString("C")</td>
                <td>@item.Currency</td>
                <td>@item.LastPaymentDate.ToShortDateString()</td>
                <td>@item.CreditLimit.ToString("C")</td>
                <td>
                    @if (item.Status == "Active")
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else if (item.Status == "Inactive")
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                    else
                    {
                        @item.Status
                    }
                </td>
                <td>@item.PhoneNumber</td>
                <td>@item.Email</td>
                <td>@item.Address</td>
                <td>@item.City</td>
                <td>@item.State</td>
                <td>@item.PostalCode</td>
                <td>@item.RegistrationDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary mt-3" asp-page="/Privacy">Next: Privacy</a>

@section Scripts {
    <script>
        // If you later add DataTables, initialize here
    </script>
}
