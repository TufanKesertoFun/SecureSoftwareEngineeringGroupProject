@model SecureSoftwareGroupProject.Pages.ProviderForm

<div class="row g-3">
    <div class="col-md-6">
        <label class="form-label">Professional Title</label>
        <input name="Form.ProfessionalTitle" class="form-control" required maxlength="120" />
        <div class="invalid-feedback">Required</div>
    </div>

    <div class="col-md-6">
        <label class="form-label">Business Name</label>
        <input name="Form.BusinessName" class="form-control" maxlength="160" />
    </div>

    <div class="col-md-3">
        <label class="form-label">Years Experience</label>
        <input name="Form.YearsExperience" type="number" min="0" max="60" class="form-control" />
    </div>

    <div class="col-md-3">
        <label class="form-label">Hourly Rate</label>
        <input name="Form.HourlyRateAmount" type="number" step="0.01" class="form-control" />
    </div>

    <div class="col-md-3">
        <label class="form-label">Callout Fee</label>
        <input name="Form.CalloutFeeAmount" type="number" step="0.01" class="form-control" />
    </div>

    <div class="col-md-3 d-flex align-items-end">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="Form.EmergencyAvailableFlag" />
            <label class="form-check-label">Emergency Available</label>
        </div>
    </div>

    <div class="col-md-12">
        <label class="form-label">Skills (CSV)</label>
        <input name="Form.SkillsCsv" class="form-control" />
    </div>

    <div class="col-md-12">
        <label class="form-label">Service Categories (CSV)</label>
        <input name="Form.ServiceCategoriesCsv" class="form-control" />
    </div>
</div>
