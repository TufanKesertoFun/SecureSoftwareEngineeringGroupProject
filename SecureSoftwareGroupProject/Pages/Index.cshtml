@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<section class="hero-apple mb-5">
    <div class="container hero-inner text-center text-lg-start">
        <span class="hero-eyebrow">Secure home services</span>
        <h1 class="hero-title">
            Find trusted home service experts — safely and privately.
        </h1>
        <p class="hero-subtitle">
            Hire licensed specialists or offer your own services with confidence. Everything lives in one privacy-first workspace.
        </p>
        <div class="hero-actions d-flex flex-wrap gap-3 justify-content-center justify-content-lg-start">
            <a class="btn btn-dark hero-primary" asp-page="/Login">Hire a Professional</a>
            <a class="btn btn-outline-dark hero-secondary" asp-page="/ProviderProfiles">Offer a Service</a>
        </div>
    </div>
</section>

<section class="container mb-5">
    <h2 class="h4 fw-semibold mb-3">Get started</h2>
    <p class="text-muted">
        Explore customer details, manage balances, and collaborate with providers using the navigation above.
    </p>
</section>
